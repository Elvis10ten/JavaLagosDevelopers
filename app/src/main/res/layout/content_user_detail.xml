<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55424242">

    <com.intrusoft.library.FrissonView
        android:id="@+id/user_avatar_fv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        app:alphaValue="40"
        app:tintColor="#000000"
        app:gradientType="linear"
        app:gradient_endColor="#00000000"
        app:gradient_startColor="#cc000000"
        app:gradientAngle="180"
        app:tideCount="3"
        app:tideHeight="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_avatar_fv"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/user_profile_url_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:maxLines="3"
            android:ellipsize="end"/>

    </LinearLayout>

    <Button
        android:id="@+id/share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/action_share_profile"
        android:fontFamily="sans-serif-medium"/>

</RelativeLayout>
